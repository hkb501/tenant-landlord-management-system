<%- include('partials/header') %>
<body>
  <div class="application-form-container">
    <h2>Apply for Property at <%= property.address %></h2>
    <form action="/tenant-dashboard/submit-application" method="POST">
        <input type="hidden" name="property_id" value="<%= property.id %>">
      
        <label for="full_name">Full Name:</label>
        <input type="text" id="full_name" name="full_name" required>
      
        <label for="contact_number">Contact Number:</label>
        <input type="text" id="contact_number" name="contact_number" required>
      
        <label for="email">Email:</label>
        <input type="email" id="email" name="email" value="<%= user.email %>" readonly>
      
        <label for="employer_name">Employer Name:</label>
        <input type="text" id="employer_name" name="employer_name" required>
      
        <label for="job_title">Job Title:</label>
        <input type="text" id="job_title" name="job_title" required>
      
        <label for="monthly_income">Monthly Income:</label>
        <input type="number" id="monthly_income" name="monthly_income" required>
      
        <label for="length_of_stay">Length of Stay:</label>
        <input type="text" id="length_of_stay" name="length_of_stay" required>
      
        <label for="number_of_occupants">Number of Occupants:</label>
        <input type="number" id="number_of_occupants" name="number_of_occupants" required>
      
        <label for="pets">Do you have pets?</label>
        <input type="text" id="pets" name="pets" placeholder="Yes/No, Type, Breed">
      
        <label for="emergency_contact">Emergency Contact Name:</label>
        <input type="text" id="emergency_contact" name="emergency_contact" required>
      
        <label for="emergency_contact_number">Emergency Contact Number:</label>
        <input type="text" id="emergency_contact_number" name="emergency_contact_number" required>
      
        <button type="submit" class="button">Submit Application</button>
      </form>
      
  </div>
  <footer>
    <p>&copy; 2024 Property Management Services</p>
  </footer>
</body>
</html>