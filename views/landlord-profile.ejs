<%- include('partials/header') %>
<body>
    <div class="profile-container">
        <h2>Landlord Profile Management</h2>

        <% if (error) { %>
            <div class="error-message">
                <p><%= error %></p>
            </div>
        <% } %>

        <form action="/landlord-dashboard/profile/update" method="POST">
            <label for="name">Name:</label>
            <input type="text" id="name" name="name" value="<%= user.name %>" required>

            <label for="email">Email:</label>
            <input type="email" id="email" name="email" value="<%= user.email %>" readonly>

            <label for="role">Role:</label>
            <select id="role" name="role" required>
                <option value="tenant" <%= user.role === 'tenant' ? 'selected' : '' %>>Tenant</option>
                <option value="landlord" <%= user.role === 'landlord' ? 'selected' : '' %>>Landlord</option>
            </select>

            <label for="created_at">Account Created At:</label>
            <input type="text" id="created_at" name="created_at" value="<%= new Date(user.created_at).toLocaleDateString() %>" readonly>

            <button type="submit">Save Changes</button>
        </form>
    </div>

    <footer>
        <p>&copy; 2024 Property Management Services</p>
    </footer>
</body>
</html>
